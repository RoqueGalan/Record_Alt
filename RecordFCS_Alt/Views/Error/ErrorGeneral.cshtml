@{
    ViewBag.Title = "ERROR - " + ViewBag.NoError;
}

<div class="text-center">
    <h1 class="text-muted h1Gigante">
        @ViewBag.NoError
    </h1>

    <div class="text-muted">
        <i>
            @ViewBag.TituloError
        </i>
    </div>

    <br />

    <small>
        @ViewBag.DescripcionError
    </small>

    <hr />

    <div>
        <a href="@ViewBag.LinkURLError" class="link link-info">
            <i class="fa @ViewBag.LinkIconoError"></i> @ViewBag.LinkTituloError
        </a>
    </div>
</div>
