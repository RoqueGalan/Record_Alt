@using RecordFCS_Alt.Helpers

@{
    var alertas = TempData.ContainsKey(Alerta.TempDataKey)
                ? (List<Alerta>)TempData[Alerta.TempDataKey]
                : new List<Alerta>();

    int i = 0;
    foreach (var alerta in alertas)
    {
        i++;
        var claseDescartable = alerta.Descartable ? "alert-dismissable" : null;
        <div class="alert alert-@alerta.AlertaEstilo @claseDescartable text-center animated rubberBand" id="alerta@(i)">
            <span>
                @if (alerta.Descartable)
                {
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><span id="time@(i)"> </span> &times;</button>


                }

                @Html.Raw(alerta.Mensaje)
            </span>
        </div>


    }
}
