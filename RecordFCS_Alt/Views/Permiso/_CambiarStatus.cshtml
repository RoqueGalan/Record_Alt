@model RecordFCS_Alt.Models.Permiso

@{
    ViewBag.CtrlName = "Permiso";
    ViewBag.Title = @ViewBag.PagName;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">
        <b>@ViewBag.PagName</b>
        <i class="text-muted">@ViewBag.CtrlName</i>
    </h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="text-center">
                <h3>
                    ¿Quieres
                    <b class="text-danger">
                        @ViewBag.PagName
                    </b>
                    el permiso
                    <br />
                    <b>@Model.TipoPermiso.Nombre</b>?
                </h3>
                <p class="text-muted">
                    <b>Descripción: </b>@Model.TipoPermiso.Descripcion
                </p>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.UsuarioID)
            @Html.HiddenFor(model => model.TipoPermisoID)
            @Html.HiddenFor(model => model.Status)
        </div>

    </div>

    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancelar</button>
        <input class="btn btn-primary" type="submit" value="Aceptar" />
    </div>
}
