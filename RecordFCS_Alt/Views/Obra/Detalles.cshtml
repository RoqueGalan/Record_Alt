<div class="row">
    <div class="pull-right">

        @if (ObraAnt == Guid.Empty)
        {
            <span class="btn btn-primary btn-xs disabled" data-toggle="tooltip" title="Obra Anterior"><span class='fa fa-chevron-left'></span></span>
        }
        else
        {
            <a href="@Url.Action("Detalles", "Obra", new  {id = ObraAnt })" class="btn btn-primary btn-xs " data-toggle="tooltip" title="Obra Anterior"><span class='fa fa-chevron-left'></span></a>
        }

        @if (ObraSig == Guid.Empty)
        {
            <span class="btn btn-primary btn-xs disabled" data-toggle="tooltip" title="Obra Siguiente"><span class='fa fa-chevron-right'></span></span>
        }
        else
        {
            <a href="@Url.Action("Detalles", "Obra", new  {id = ObraSig })" class="btn btn-primary btn-xs " data-toggle="tooltip" title="Obra Siguiente"><span class='fa fa-chevron-right'></span></a>
        }


    </div>
</div>

<ul class="media-list">

    @foreach (var piezaPrincipal in Model.Piezas)
    {
        Html.RenderAction("Ficha", "Pieza", new { id = piezaPrincipal.PiezaID, tipo = "Completa" });
    }
</ul>



