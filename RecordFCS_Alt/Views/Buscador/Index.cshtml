@{
    ViewBag.Title = "Buscador Avanzado";
}

<h2>
    Buscador
    <i>Avanzado</i>
</h2>


<ol class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home")</li>
    <li class="active">Mantenimiento @ViewBag.Title</li>
</ol>



<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div id="renderMenuFiltros">
            @{ Html.RenderAction("MenuFiltros", "Buscador", new { rutaVista = "_ResultadosBusqueda" }); }
        </div>
    </div>


    <div class="col-lg-9 col-sm-6">
        @*<h4 class="text-center">
                <b>Resultados</b>
            </h4>*@

        <div id="renderResultadosBusqueda">

            <div class="text-center">

                <p>
                    <i class="text-muted">
                        Selecciona los filtros para realizar una busqueda avanzada
                    </i>
                </p>

            </div>

        </div>

    </div>

</div>


<script src="~/Scripts/add.toolTip.js"></script>



